ARG JDK_VERSION

FROM openjdk:${JDK_VERSION}

WORKDIR /app

ARG START_MODULE_NAME_ARG="client-app-module"
ENV MODULE_TO_START=${START_MODULE_NAME_ARG}

ARG APP_VERSION_ARG
ENV APP_VERSION=${APP_VERSION_ARG}

COPY /target/${MODULE_TO_START}-${APP_VERSION}.jar /app

CMD java -jar /app/${MODULE_TO_START}-${APP_VERSION}.jar
